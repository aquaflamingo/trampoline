<div class="container mt-3">
  <h1 class=''>Secrets</h1>
  <section name="secrets" class="py-3">
    <% if @secrets.empty? %>
      <div class="py-3">
        <p class="text-muted"> No secrets. You can add one <%= link_to "here", new_secret_path %> </p>
      </div>
    <% else %>
      <%= link_to "Add New Secret", new_secret_path %> </p>
      <!-- Name of the partial is important, must be keys if you want to use collection -->
      <%= render partial: 'secret', collection: @secrets %>
    <% end %>
  </section>
</div>

