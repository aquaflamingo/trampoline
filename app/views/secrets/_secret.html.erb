<div class="card mt-3">
  <div class="card-body">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="card-title"><%= secret.name %> </h5>
    </div>
    <h6 class='card-subtitle mb-2 text-muted'>
      <%= secret.vendor_name %> Secret
    </h6>
    <form>
      <fieldset disabled>
        <div class="form-group">
          <label> Blob </label>
          <input class="form-control" value="**************"/>
        </div>
      </fieldset>
    </form>
  </div>
  <div class="card-footer text-muted">
    <div class="row">
      <div class="col">
        <p>
          Added <%= time_ago_in_words(secret.created_at) %> ago 
        </p>
      </div>
      <div class="col">
        <%= link_to "Delete", 
          secret_path(secret), 
          data: { turbo_method: :delete, confirm: "Are you sure you want to delete this?"},
          class: 'btn btn-danger float-right ml-3'
        %>
      </div>
    </div>
  </div>
</div>
