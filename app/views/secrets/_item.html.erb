<div class="card mt-3">
  <div class="card-body">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="card-title"><%= secret.name %> </h5>
    </div>
    <h6 class='card-subtitle mb-2 text-muted'>
      <%= secret.vendor_name %>
    </h6>
    <form>
      <fieldset disabled>
        <div class="form-group">
          <label> </label>
          <input class="form-control" value="<%= secret.name %>"/>
        </div>
        <div class="form-group">
          <label> Value </label>
          <!-- TODO show and hide -->
        </div>
      </fieldset>
    </form>
  </div>
  <div class="card-footer text-muted">
    <div class="row">
      <div class="col">
        <p>
          Added <%= time_ago_in_words(secret.created_at) %> ago 
        </p>
      </div>
      <div class="col">
        <%= link_to "Delete", secret_path(secret), method: 'delete', class: 'btn btn-danger float-right ml-3', remote: true, data: { confirm: "Are you sure you want to delete this?"}%>
      </div>
    </div>
  </div>
</div>
